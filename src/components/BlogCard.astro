---
import { Image } from "astro:assets";

const { img, title, caption, slug, coverAlt } = Astro.props;
---

<div class="blog-card">
  <div class="figure">
    <Image
      src={img}
      alt={coverAlt}
      style={"height: 100%; width: 100%; object-fit: cover"}
    />
  </div>
  <h3 class="label">{title}</h3>
  <p class="caption">{caption}</p>
  <a href={`/blog/${slug}`} class="link">Read More</a>
</div>

<style>
  .blog-card {
    max-width: 35rem;
    display: grid;
    gap: 1.6rem;
  }
  .figure {
    width: 100%;
  }
  .link {
    color: var(--color-accent);
    font-weight: 700;
  }
</style>
